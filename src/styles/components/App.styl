@import url('https://fonts.googleapis.com/css2?family=Lato:wght@700;900&display=swap');
@import url("https://www.w3schools.com/w3css/4/w3.css");

@keyframes fadeIn {
  from {
    filter: blur(5px);
    opacity: 0;

  }
  to{
    filter: blur(0);
    opacity:1;
  }
}


body
  background-color: rgba(12,10,29,1.0);
  font-family: 'Lato', sans-serif;
  color: white;
  display: flex;
  height: 100%;
  text-decoration: none;

.No-point
 list-style-type: None
 padding-left: 10px;

.container
  flex-wrap: wrap;
  justify-content: space-between;
  min-height: 100px;
  border-radius: 10px;
  box-shadow: 0px 10px 14px rgba(0, 0, 0, .2);
  background-color: rgba(255, 255, 255, 0.05);
  transition: all 0.2s;
  max-width: 90%
  margin: 15px
  margin-left: 20px;

h2
 text-shadow: 0 0 64px rgb(255 0 255), 0 0 16px rgb(0 0 255 / 84%)
 background-image: linear-gradient(to right, #4178FF, #00ff84);
 padding: 0.8%;
 border-radius: 4px;

.two-cols

  display: inline-block;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 50%;
  border-radius: 10px;
  box-shadow: 0px 10px 14px rgba(0, 0, 0, .2);
  background-color: rgba(255, 255, 255, 0.05);
  transition: all 0.2s;
  padding: 1% 1% 1% 1%  
  margin: 15px
  margin-left: 20px;
  grid-template-rows: 1fr 1fr;
  max-width: 43.5%;
  min-height: 100px;
.fast-animation
  animation: fadeIn 1s 

.slow-animation
  animation: fadeIn 3s 